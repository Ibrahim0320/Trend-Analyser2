datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Watchlist {
  region     String   @id
  keywords   String[]
  updated_at DateTime @updatedAt
}

model Theme {
  id              String   @id @default(cuid())
  region          String
  label           String
  heat            Float
  momentum        Float
  forecast_heat   Float?
  confidence      Float?
  act_watch_avoid String?
  links           String[] @default([])
  week_of         DateTime @default(now())

  @@index([region, week_of])
}
