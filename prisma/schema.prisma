generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ResearchRun {
  id            String   @id @default(cuid())
  created_at    DateTime @default(now())
  region        String
  keywords_json Json
  leaders_json  Json
  rising_json   Json
  why_matters   String
  ahead_json    Json
  citations_json Json
}


model Watchlist {
  region     String  @id
  updated_at DateTime @default(now())
  keywords   Json     // array of strings
}

model Theme {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  region     String
  theme      String
  heat       Float
  momentum   Float
  forecast   Float?
  confidence Float?
  awa        String?  // ACT | WATCH | AVOID
  links      Json     // array of urls
}
